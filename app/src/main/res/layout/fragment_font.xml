<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".fragment.FontFragment">

    <ImageView
        android:id="@+id/favoriteSampleIconImageView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/colorAccent"
        android:contentDescription="Font Screen Font Logo"
        android:foregroundGravity="center"
        android:src="@drawable/ic_font"
        app:tint="@color/colorWhite"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/fontProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ListView
        android:id="@+id/fontListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:divider="@color/spacerColor"
        android:dividerHeight="1dp"
        android:focusable="true"
        android:listSelector="@color/spacerColor"
        android:orientation="vertical" />
</LinearLayout>